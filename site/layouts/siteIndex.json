{
  "type": "BaseLayout",
  "props": {
    "header": [
      {
        "type": "h2",
        "class": "text-xl md:text-4xl font-extralight",
        "children": {
          "utility": "get",
          "parameters": ["context", "conference.slogan"]
        }
      },
      {
        "type": "div",
        "class": "flex flex-row justify-between",
        "children": [
          {
            "type": "h3",
            "class": "text-xl md:text-4xl font-extralight",
            "children": [
              {
                "children": {
                  "utility": "getDate",
                  "parameters": [
                    {
                      "utility": "get",
                      "parameters": [
                        "context",
                        "conference.startDate"
                      ]
                    }
                  ]
                }
              },
              { "children": "-" },
              {
                "children": {
                  "utility": "getDate",
                  "parameters": [
                    {
                      "utility": "get",
                      "parameters": [
                        "context",
                        "conference.endDate"
                      ]
                    }
                  ]
                }
              },
              { "children": "." },
              {
                "children": {
                  "utility": "getYear",
                  "parameters": [
                    {
                      "utility": "get",
                      "parameters": [
                        "context",
                        "conference.endDate"
                      ]
                    }
                  ]
                }
              }
            ]
          },
          {
            "_todo": "resolve this from graphql api",
            "type": "h3",
            "class": "text-xl md:text-4xl font-extralight",
            "children": "Helsinki, Finland"
          }
        ]
      }
    ],
    "content": [
      {
        "type": "div",
        "class": "flex flex-col gap-16",
        "children": [
          {
            "type": "Markdown",
            "bindToProps": {
              "inputText": {
                "utility": "get",
                "parameters": ["context", "intro"]
              }
            },
            "props": {
              "class": "prose lg:prose-xl",
              "type": "div"
            }
          },
          {
            "type": "AllSpeakers",
            "bindToProps": {
              "conference": {
                "utility": "get",
                "parameters": [
                  "context",
                  "conference"
                ]
              }
            }
          },
          {
            "type": "AllSponsors",
            "bindToProps": {
              "conference": {
                "utility": "get",
                "parameters": [
                  "context",
                  "conference"
                ]
              }
            }
          }
        ]
      }
    ]
  }
}
