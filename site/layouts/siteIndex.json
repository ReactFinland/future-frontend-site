{
  "type": "BaseLayout",
  "props": {
    "header": [
      {
        "type": "Heading",
        "props": {
          "hideAnchor": true,
          "level": 2,
          "class": "text-xl md:text-4xl font-light"
        },
        "bindToProps": {
          "children": {
            "utility": "get",
            "parameters": ["context", "conference.slogan"]
          }
        }
      },
      {
        "type": "Heading",
        "props": {
          "children": "13-14 June, 2024 at Paasitorni, Helsinki",
          "hideAnchor": true,
          "level": 2,
          "class": "text-xl md:text-2xl font-extralight"
        }
      }
    ],
    "content": [
      {
        "type": "div",
        "class": "flex flex-col gap-8",
        "children": [
          {
            "type": "Markdown",
            "bindToProps": {
              "children": {
                "utility": "get",
                "parameters": ["context", "intro"]
              }
            },
            "props": {
              "class": "prose lg:prose-xl",
              "type": "div"
            }
          },
          {
            "type": "div",
            "children": [
              {
                "type": "Heading",
                "props": {
                  "level": 2,
                  "children": "Subscribe to our mailing list for the latest news",
                  "class": "text-2xl"
                }
              },
              {
                "type": "Subscribe"
              }
            ]
          },
          {
            "type": "AllSpeakers",
            "bindToProps": {
              "conference": {
                "utility": "get",
                "parameters": [
                  "context",
                  "conference"
                ]
              }
            }
          },
          {
            "type": "AllSponsors",
            "bindToProps": {
              "conference": {
                "utility": "get",
                "parameters": [
                  "context",
                  "conference"
                ]
              }
            }
          }
        ]
      }
    ]
  }
}
