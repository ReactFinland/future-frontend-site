{
  "type": "BaseLayout",
  "props": {
    "content": [
      {
        "type": "header",
        "class": "bg-gradient-to-br from-emerald-100 to-purple-200 py-8",
        "children": [
          {
            "type": "div",
            "class": "sm:mx-auto px-4 py-4 sm:py-8 max-w-3xl flex",
            "children": [
              {
                "type": "div",
                "class": "flex flex-col gap-8",
                "children": [
                  {
                    "type": "h1",
                    "class": "text-4xl md:text-6xl",
                    "children": [
                      {
                        "type": "span",
                        "children": "gustwind-template",
                        "class": "align-middle"
                      }
                    ]
                  },
                  {
                    "type": "h2",
                    "class": "text-xl md:text-4xl font-extralight",
                    "children": "A simple starting point for Gustwind projects"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Markdown",
        "bindToProps": {
          "inputText": {
            "utility": "get",
            "parameters": ["context", "readme.content"]
          }
        },
        "props": {
          "class": "md:mx-auto my-8 px-4 md:px-0 w-full lg:max-w-3xl prose lg:prose-xl",
          "type": "div"
        }
      }
    ]
  }
}
