{
  "type": "a",
  "class": "underline",
  "visibleIf": [{ "utility": "get", "parameters": ["props", "href"] }],
  "classList": {
    "font-bold": [
      { "utility": "get", "parameters": ["props", "href"] },
      {
        "utility": "trim",
        "parameters": [
          { "utility": "get", "parameters": ["context", "pathname"] },
          "/"
        ]
      }
    ]
  },
  "children": {
    "utility": "render",
    "parameters": [
      {
        "utility": "get",
        "parameters": ["props", "children"]
      }
    ]
  },
  "attributes": {
    "href": {
      "utility": "validateUrl",
      "parameters": [
        {
          "utility": "get",
          "parameters": ["props", "href"]
        }
      ]
    }
  }
}
