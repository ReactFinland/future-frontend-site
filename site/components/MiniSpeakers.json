{
  "foreach": [{ "utility": "get", "parameters": ["props", "children"] }, {
    "type": "a",
    "attributes": {
      "href": {
        "utility": "concat",
        "parameters": [
          {
            "utility": "validateUrl",
            "parameters": ["speakers"]
          },
          "#",
          {
            "utility": "getUniqueAnchorId",
            "parameters": [
              {
                "utility": "get",
                "parameters": ["props", "name"]
              }
            ]
          }
        ]
      }
    },
    "children": [
      {
        "type": "figure",
        "class": "flex flex-col gap-2",
        "children": [
          [
            {
              "type": "img",
              "class": {
                "utility": "get",
                "parameters": ["props", "imgClass"]
              },
              "attributes": {
                "alt": { "utility": "get", "parameters": ["props", "about"] },
                "loading": "lazy",
                "src": {
                  "utility": "get",
                  "parameters": ["props", "image.url"]
                }
              }
            },
            {
              "type": "figcaption",
              "class": "flex justify-center",
              "children": {
                "utility": "get",
                "parameters": ["props", "name"]
              }
            }
          ]
        ]
      }
    ]
  }]
}
