{
  "foreach": [{ "utility": "get", "parameters": ["props", "children"] }, {
    "type": "a",
    "attributes": {
      "href": {
        "utility": "concat",
        "parameters": [
          {
            "utility": "validateUrl",
            "parameters": ["speakers"]
          },
          "#",
          {
            "utility": "getUniqueAnchorId",
            "parameters": [
              {
                "utility": "get",
                "parameters": ["props", "name"]
              }
            ]
          }
        ]
      }
    },
    "children": [
      {
        "type": "figure",
        "class": {
          "utility": "get",
          "parameters": ["props", "imgContainerClass", "flex flex-col gap-2"]
        },
        "children": [
          [
            {
              "type": "img",
              "class": {
                "utility": "get",
                "parameters": ["props", "imgClass", ""]
              },
              "attributes": {
                "alt": { "utility": "get", "parameters": ["props", "name"] },
                "loading": "lazy",
                "src": {
                  "utility": "rewriteImageSource",
                  "parameters": [
                    {
                      "utility": "get",
                      "parameters": ["props", "image.url"]
                    }
                  ]
                },
                "title": {
                  "utility": "get",
                  "parameters": ["props", "tagline"]
                },
                "width": "102",
                "height": "102"
              }
            },
            {
              "type": "figcaption",
              "class": {
                "utility": "get",
                "parameters": ["props", "captionClass", ""]
              },
              "children": {
                "utility": "get",
                "parameters": ["props", "name"]
              }
            }
          ]
        ]
      }
    ]
  }]
}
